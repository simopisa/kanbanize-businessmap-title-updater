{
  "manifest_version": 3,
  "name": "Kanbanize Title Updater",
  "version": "1.0",
  "description": "Update Kanbanize card titles recursively across parent-child hierarchies",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.kanbanize.com/api/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.png",
      "32": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}